<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.gdpu.yz12</groupId>
    <artifactId>borrowing</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <artifactId>borrowing-web</artifactId>
  <packaging>war</packaging>
  <name>borrowing-web</name>
  <description>前端页面展示包</description>
  
  <properties>
  	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  <dependencies>
  	<dependency>
  		<groupId>com.gdpu.yz12</groupId>
    	<artifactId>borrowing-jar</artifactId>
  	</dependency>
  			<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.1.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.struts</groupId>
			<artifactId>struts2-core</artifactId>
			<version>2.3.24.1</version>
		</dependency>
  </dependencies>
  
  <build>
  	<resources>
			<!-- 将reasources拷贝到classes目录 -->
			<resource>
				<directory>src/main/resources</directory>
				<targetPath>${basedir}/target/classes</targetPath>
			</resource>
			<!-- 将webapp拷贝到集成测试模块 -->
			<resource>
				<directory>src/main/webapp</directory>
				<targetPath>${rundir}</targetPath>
			</resource>
			<!-- 将classes拷贝到集成测试模块 -->
			<resource>
				<directory>${basedir}/target/classes</directory>
				<targetPath>${rundir}/WEB-INF/classes</targetPath>
			</resource>
		</resources>
  
  	<plugins>
		<plugin>
			<artifactId>maven-war-plugin</artifactId>
			<configuration>
			<version>3.0</version>
			</configuration>
		</plugin>
	</plugins>
  </build>
</project>